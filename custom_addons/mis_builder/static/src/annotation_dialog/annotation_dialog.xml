<?xml version="1.0" encoding="utf-8" ?>
<templates>
    <t t-name="mis_builder.AnnotationDialog">
        <Dialog title="props.title" size="'md'">
            <textarea
                class="form-control"
                rows='4'
                placeholder="Insert note here"
                t-model="state.annotationText"
            />
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="confirm">Confirm</button>
                <button
                    class="btn btn-secondary"
                    t-on-click="remove"
                    t-if="props.canRemove"
                >Remove</button>
                <button
                    class="btn btn-secondary"
                    t-on-click="props.close"
                >Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>
