                position="attributes"
            >
                <attribute name="required" add="(not lastname2)" separator=" and " />
            </xpath>
            <xpath
                expr="//field[@name='child_ids']/form//field[@name='lastname'][2]"
                position="after"
            >
                <field
                    invisible="form_has_lastname_first"
                    name="lastname2"
                    required="not firstname and not lastname and not is_company and type == 'contact'"
                />
            </xpath>
        </field>
    </record>
</odoo>
